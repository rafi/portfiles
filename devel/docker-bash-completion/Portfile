PortSystem          1.0
PortGroup           github 1.0
github.setup        docker docker 1.13.0 v

name                docker-bash-completion
categories          devel
platforms           darwin
license             Docker

maintainers         gmail.com:justrafi
description         bash completion file for core docker commands
long_description    ${name}: ${description}

supported_archs     noarch
checksums           rmd160  36635c51090787a14cdf53b1bb110458a6a9a6a2 \
                    sha256  d53ca2db34d2443b3b684adb691afb531a32573531c2e9475e4de1f4895732a3

use_configure       no

depends_run-append  path:etc/bash_completion:bash-completion

build {}

destroot {
    xinstall -d -m 0755 ${destroot}${prefix}/etc/bash_completion.d
    copy ${worksrcpath}/contrib/completion/bash/docker \
        ${destroot}${prefix}/etc/bash_completion.d/docker
}
