PortSystem          1.0
PortGroup           github 1.0

github.setup        moncho dry 0.8-beta.4 v
github.tarball_from releases
extract.suffix

categories          devel
platforms           darwin
license             MIT

maintainers         {gmail.com:justrafi @rafi} openmaintainer
description         A Docker container manager for the terminal
long_description    ${name}: ${description}

supported_archs     x86_64 i386
checksums           ${name}-${os.platform}-amd64 \
                    rmd160  aeda23d2f60e9398691feceafbe3b0b7475f0608 \
                    sha256  d1ebd9def79394e05265bbd1ed5db6f12190de08dc04120cc5f74da6b67134a1 \
                    ${name}-${os.platform}-386 \
                    rmd160  625adbc03fa4e6a65858e10e629d8dd99e4a4cff \
                    sha256  5205e2238c322d1756d6ca3cca10558ef56cd7c4ffc1e6ead0ab40f1cb607459

use_configure       no

if {$build_arch == "x86_64"} {
    distname ${name}-${os.platform}-amd64
} else {
    distname ${name}-${os.platform}-386
}

extract {
    file copy ${distpath}/${distfiles} ${workpath}/${distname}
}
post-extract {}
build {}
destroot {
    xinstall -m 0755 ${workpath}/${distname} ${destroot}${prefix}/bin/${name}
}
