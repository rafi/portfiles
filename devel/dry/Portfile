# $Id$

PortSystem          1.0
PortGroup           github 1.0

github.setup        moncho dry 0.8-beta.2 v
github.tarball_from releases
extract.suffix

categories          devel
platforms           darwin
license             MIT

maintainers         gmail.com:justrafi
description         A Docker container manager for the terminal
long_description    ${name}: ${description}

supported_archs     x86_64 i386
checksums           ${name}-${os.platform}-amd64 \
                    rmd160  e8b5b58e66e91bb8d776146018c49eefdee11765 \
                    sha256  63c18d3cc4e8c0ae741ed884cd7eaac6243523e2127457fa26362b056d5dd988 \
                    ${name}-${os.platform}-386 \
                    rmd160  daaf9d5af97e11b3e5406838baf4a2d38110863b \
                    sha256  701ebfbab69d980d7c736b824427df9800ea984e1231395772649f0f26dd3498

use_configure       no

if {$build_arch == "x86_64"} {
    distname ${name}-${os.platform}-amd64
} else {
    distname ${name}-${os.platform}-386
}

extract {
    file copy ${distpath}/${distfiles} ${workpath}/${distname}
}
post-extract {}
build {}
destroot {
    xinstall -m 0755 ${workpath}/${distname} ${destroot}${prefix}/bin/${name}
}
