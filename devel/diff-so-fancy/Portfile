PortSystem          1.0
PortGroup           github 1.0
github.setup        so-fancy diff-so-fancy 0.11.2 v

categories          devel
platforms           darwin
license             MIT

maintainers         gmail.com:justrafi
description         Good-lookin' diffs. Actually, nah. The best-lookin' diffs.
long_description    ${name}: ${description}

supported_archs     noarch
checksums           rmd160  dd7d985cb52eddb6068e28aa486369d619fe079b \
                    sha256  11d88d2bf34f4f1ce6328f3ab097a8a219c14a1ca26f7e6fb8f8b6fe697411f3
use_configure       no

post-configure {
    reinplace -E {s|/libexec/|/../libexec/|g} ${worksrcpath}/diff-so-fancy
}

build {}

destroot {
    xinstall -m 755 ${worksrcpath}/diff-so-fancy ${destroot}${prefix}/bin
    xinstall -m 755 ${worksrcpath}/third_party/diff-highlight/diff-highlight ${destroot}${prefix}/bin
    xinstall -m 755 ${worksrcpath}/libexec/diff-so-fancy.pl ${destroot}${prefix}/libexec
}
