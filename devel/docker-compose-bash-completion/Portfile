# $Id$

PortSystem          1.0
PortGroup           github 1.0
github.setup        docker compose 1.11.2

name                docker-compose-bash-completion
categories          devel
platforms           darwin

maintainers         gmail.com:justrafi
description         bash completion file for docker-compose commands
long_description    ${name}: ${description}

supported_archs     noarch
checksums           rmd160  9c739082d38fa6f27788eec32f1b8096fa449165 \
                    sha256  6e7f5d059d78dbc3f586728d4a47e1786839eca1f1fe332a5aeec951c08e0138

use_configure       no

depends_run-append  path:etc/bash_completion:bash-completion

build {}

destroot {
    xinstall -d -m 0755 ${destroot}${prefix}/etc/bash_completion.d
    copy ${worksrcpath}/contrib/completion/bash/docker-compose \
        ${destroot}${prefix}/etc/bash_completion.d/docker-compose
}
