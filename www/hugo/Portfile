# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem          1.0
PortGroup           github 1.0

github.setup        spf13 hugo 0.24.1 v
github.tarball_from releases

categories          www
platforms           darwin
license             MIT

maintainers         gmail.com:justrafi
description         Fast and Flexible Static Site Generator built with love
long_description    ${name}: ${description}

checksums           ${name}_${version}_macOS-64bit.tar.gz \
                    rmd160  4f42d1773627e7d6e2ac5be681e945358969909d \
                    sha256  e376b13495b83736dcf54e9a48938defbd399cad39492285ea76be90623ca469 \
                    ${name}_${version}_macOS-32bit.tar.gz \
                    rmd160  d761064c78759aaad319b48d615fcaa5ffadf344 \
                    sha256  d6fabd1c5019f290d3ed02a6ee889f1ebb7162aa4fa6f4b9d5a0b53cc72251eb

supported_archs     x86_64 i386
use_configure       no

depends_run-append  path:etc/bash_completion:bash-completion

distname            ${name}_${version}
extract.mkdir       yes
if {$build_arch == "x86_64"} {
    extract.suffix _macOS-64bit.tar.gz
} else {
    extract.suffix _macOS-32bit.tar.gz
}

build    {}
destroot {
    xinstall -m 0755 ${worksrcpath}/${name} \
        ${destroot}${prefix}/bin/${name}

    # Man pages
    system -W ${destroot}${prefix}/bin \
        "./hugo gen man --dir=${destroot}${prefix}/share/man/man1"

    # Bash autocompletion
    xinstall -d -m 0755 ${destroot}${prefix}/etc/bash_completion.d
    system -W ${destroot}${prefix}/bin \
        "./hugo gen autocomplete --completionfile=${destroot}${prefix}/etc/bash_completion.d/hugo"
}
