# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem          1.0
PortGroup           github 1.0

github.setup        spf13 hugo 0.19 v
github.tarball_from releases

categories          www
platforms           darwin
license             MIT

maintainers         gmail.com:justrafi
description         Fast and Flexible Static Site Generator built with love
long_description    ${name}: ${description}

checksums           ${name}_${version}_macOS-64bit.zip \
                    rmd160  3493e417d6c832f254989b480e88d18fd7c177fc \
                    sha256  27ee0b7046b29cd7e0b44029f000192d0db76fd4107d91c12b92a60898c1e0a2 \
                    ${name}_${version}_macOS-32bit.zip \
                    rmd160  b9aa1dc8ff802a36ced3930c251373575b013a8d \
                    sha256  e8e7d07a81c00d9a8c8b387ae967181b4be5fab13cf907656e2e16f4bba7b311

supported_archs     x86_64 i386
use_configure       no
use_zip             yes

depends_run-append  path:etc/bash_completion:bash-completion

distname            ${name}_${version}
extract.mkdir       yes
if {$build_arch == "x86_64"} {
    extract.suffix _macOS-64bit.zip
    set real_name ${name}_${version}_${os.platform}_amd64
} else {
    extract.suffix _macOS-32bit.zip
    set real_name ${name}_${version}_${os.platform}_amd32
}

build    {}
destroot {
    xinstall -m 0755 ${worksrcpath}/${real_name}/${real_name} \
        ${destroot}${prefix}/bin/${name}

    # Man pages
    system -W ${destroot}${prefix}/bin \
        "./hugo gen man --dir=${destroot}${prefix}/share/man/man1"

    # Bash autocompletion
    xinstall -d -m 0755 ${destroot}${prefix}/etc/bash_completion.d
    system -W ${destroot}${prefix}/bin \
        "./hugo gen autocomplete --completionfile=${destroot}${prefix}/etc/bash_completion.d/hugo"
}
