PortSystem          1.0
PortGroup           github 1.0
github.setup        baskerville bspwm 4350573ad9aaabba6eceebbe93ed88a539145cac

version             20170204
categories          x11 x11-wm
platforms           darwin
license             BSD 2-clause

maintainers         gmail.com:justrafi
description         A tiling window manager based on binary space partitioning
long_description    ${name}: \
                    bspwm is a tiling window manager that represents windows \
                    as the leaves of a full binary tree. It is controlled \
                    and configured via bspc.

checksums           rmd160  b806178fcfc3a479910f7889ea92b5a86dbf5450 \
                    sha256  02b69897e495f111ada7e7f13a51cb8353b2a90c58d9e77a618c1117f6a9ae10

depends_lib         port:xorg-xcb-util \
                    port:xorg-xcb-util-wm \
                    port:xorg-xcb-util-keysyms \
                    port:xorg-libxcb

use_configure       no

build.env-append        PKG_CONFIG_PATH=$prefix/lib/pkgconfig \
                        CFLAGS="${configure.cflags} [get_canonical_archflags]" \
                        LDFLAGS="${configure.ldflags} [get_canonical_archflags]"

build.args-append       CC=${configure.cc} \
                        LD=${configure.cc} \
                        COLOR=0 \
                        VERBOSE=

destroot.args-append    PREFIX=${prefix} \
                        SYSCONFDIR=${prefix}/etc/ \
                        COLOR=0 \
                        VERBOSE=
