# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=portfile:et:sw=4:ts=4:sts=4
# $Id$

PortSystem          1.0
PortGroup           github 1.0
github.setup        rgcr m-cli 0.2.1 v

name                m-cli
categories          sysutils
platforms           darwin

maintainers         gmail.com:justrafi
description         Swiss Army Knife for Mac OS X
long_description    ${name}: ${description}

supported_archs     noarch
checksums           rmd160  a45ecc6a93b8db96cc78bbc5b74f2d0cffde265c \
                    sha256  4f4579b2f0da58ef278885a41cfce1df22fecdd8db9a794a1750787fa5d6a68b
use_configure       no

patchfiles          patch_opt_local.diff

depends_run-append  path:etc/bash_completion:bash-completion

build {}

destroot {
    xinstall -d -m 755 ${destroot}${prefix}/libexec/${name}
    xinstall -d -m 755 ${destroot}${prefix}/libexec/${name}/plugins

    # Documentation and license
    xinstall -m 755 -W ${worksrcpath} Readme.md LICENSE.md \
        ${destroot}${prefix}/libexec/${name}

    # Executable and plugins
    xinstall -m 755 {*}[glob ${worksrcpath}/plugins/*] \
        ${destroot}${prefix}/libexec/${name}/plugins

    xinstall -m 775 ${worksrcpath}/m ${destroot}${prefix}/bin/m

    # Bash completions
    xinstall -d -m 755 ${destroot}${prefix}/etc/bash_completion.d
    copy ${worksrcpath}/completion/bash/m \
        ${destroot}${prefix}/etc/bash_completion.d/m
}
