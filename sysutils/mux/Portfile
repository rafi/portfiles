    xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
    xinstall -m 644 -W ${worksrcpath} LICENSE README.md ${destroot}${prefix}/share/doc/${name}
    xinstall -m 775 ${worksrcpath}/mux ${destroot}${prefix}/bin
}
